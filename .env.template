# COGS Configuration Template
# Copy this file to .env and fill in your actual values

# Required: Mistral API Key (get from https://console.mistral.ai/)
MISTRAL_API_KEY=your_mistral_api_key_here

# Optional: Elasticsearch Configuration
ELASTICSEARCH_URL=http://localhost:9200
ES_URL=http://localhost:9200

# Optional: Logging Configuration
LOG_LEVEL=INFO

# Optional: Database Configuration
DATABASE_URL=sqlite:///cogs_memory.db

# Optional: Application Settings
INDEX_NAME=building_codes
EMBEDDING_MODEL=mistral-embed
CHAT_MODEL=mistral-small
BATCH_SIZE=20

# Optional: Flask settings (for future web interface)
FLASK_SECRET_KEY=your_secret_key_here
FLASK_ENV=production
